    <style>
        :root {
            --dark-bg: #0a0a12;
            --darker-bg: #050508;
            --card-bg: #13131f;
            --card-border: #252538;
            --text-primary: #f0f0ff;
            --text-secondary: #c0c0d0;
            --accent-primary: #6e44ff;
            --accent-secondary: #2bd1fc;
            --accent-tertiary: #ff3e9d;
            --neon-glow: 0 0 10px rgba(110, 68, 255, 0.5);
            --transition-fast: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-medium: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        body {
            background-color: var(--dark-bg);
            color: var(--text-primary);
            font-family: 'Rubik', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            line-height: 1.6;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Orbitron', sans-serif;
            letter-spacing: 0.5px;
        }
        
        .navbar {
            background-color: var(--darker-bg) !important;
            border-bottom: 1px solid rgba(110, 68, 255, 0.2);
            padding: 12px 0;
            backdrop-filter: blur(8px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: var(--neon-glow);
            letter-spacing: 1.5px;
        }
        
        .nav-link {
            font-weight: 600;
            color: var(--text-secondary) !important;
            margin: 0 8px;
            padding: 8px 16px !important;
            border-radius: 6px;
            transition: var(--transition-fast);
            position: relative;
            overflow: hidden;
        }
        
        .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
            transition: var(--transition-fast);
        }
        
        .nav-link:hover, .nav-item.active .nav-link {
            color: var(--text-primary) !important;
        }
        
        .nav-link:hover::before, .nav-item.active .nav-link::before {
            width: 100%;
        }
        
        .container {
            padding-bottom: 60px;
        }
        
        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: var(--transition-medium);
            margin-bottom: 30px;
        }
        
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3), 0 0 15px rgba(110, 68, 255, 0.3);
            border-color: rgba(110, 68, 255, 0.4);
        }
        
        .card-img-top {
            height: 240px;
            object-fit: cover;
            border-bottom: 1px solid var(--card-border);
        }
        
        .card-body {
            padding: 20px;
        }
        
        .card-title {
            font-weight: 600;
            font-size: 1.25rem;
            margin-bottom: 12px;
            color: var(--text-primary);
        }
        
        .card-text {
            color: var(--text-secondary);
            font-size: 0.95rem;
            margin-bottom: 20px;
        }
        
        .btn-custom {
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-tertiary));
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: var(--transition-medium);
            text-transform: uppercase;
            font-size: 0.85rem;
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
        
        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3), 0 0 15px rgba(110, 68, 255, 0.4);
        }
        
        footer {
            background-color: var(--darker-bg);
            padding: 30px 0 20px;
            margin-top: auto;
            border-top: 1px solid rgba(110, 68, 255, 0.2);
        }
        
        footer p {
            margin-bottom: 12px;
            font-size: 0.9rem;
            color: var(--text-secondary);
        }
        
        footer i {
            color: var(--accent-secondary);
            margin-right: 10px;
            font-size: 1.1rem;
        }
        
        .footer-glow {
            text-shadow: 0 0 8px rgba(43, 209, 252, 0.3);
        }
        
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
            
            .nav-link {
                margin: 4px 0;
                text-align: center;
            }
            
            .card {
                margin-bottom: 20px;
            }
        }
    </style>
</head>
